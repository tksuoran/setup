{
    "editor.insertSpaces": true,
    "editor.formatOnPaste": false,
    "editor.tabSize": 4,
    "editor.renderWhitespace": "all",
    "editor.tokenColorCustomizations": {
        "strings": "#FFFF00",
        "numbers": "#FFFF00",
        "textMateRules": [{
            "scope": "keyword.operator",
            "settings": {
                "foreground": "#00FFFF",
            }
        },{
            "scope":"comment",
            "settings": {
                "foreground": "#77aaff",
            }
        }]
    },
    "editor.fontFamily": "'Source Code Pro Semibold', 'Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
    "editor.fontSize": 13,
    "editor.lineHeight": 16,
    "workbench.colorCustomizations": {
        "editorCursor.foreground": "#ffaa00",
        "editorCursor.background": "#ff8800",
        "editor.selectionBackground": "#0000cc",
        "editor.selectionForeground": "#ffffff"
    },
    "window.zoomLevel": 0,
    "breadcrumbs.enabled": true,
    "editor.showFoldingControls": "always",
    "terminal.integrated.scrollback": 10000000,
    "files.insertFinalNewline": true,
    "editor.stablePeek": true,
    "editor.detectIndentation": false,
    "editor.dragAndDrop": false,
    //"C_Cpp.clang_format_path": "/path/to/<clang-format-executable>",
    "C_Cpp.clang_format_style": "/home/tsuoranta/.clang-format",
    "C_Cpp.clang_format_fallbackStyle": "none",
    "[cpp]": {
        "editor.defaultFormatter": "xaver.clang-format"
    },
    "debug.console.fontFamily": "Source Code Pro Semibold",
    "debug.console.lineHeight": 16,
    "cmake.configureOnOpen": false,
    "logFileHighlighter.customPatterns": [
        {
            "pattern": "gl\\:glBindFramebuffer",
            "foreground": "#ff8800"
        },
        {
            "pattern": "gl\\:\\w+",
            "foreground": "#eeccee"
        },
        {
            "pattern": "glDrawArraysInstanced",
            "foreground": "#ffffff"
        },
        {
            "pattern": "glDrawElementsInstanced",
            "foreground": "#ffffff"
        },
        {
            "pattern": "GL_[_A-Z0-9]*",
            "foreground": "#ccff88"
        },
        {
            "pattern": "\\s[_a-z0-9]+.cpp\\:\\d+",
            "foreground": "#cceecc"
        },
        {
            "pattern": "\\[\\s*\\d+\\ms]\\s",
            "foreground": "#ccccee"
        },
        {
            "pattern": "Enter\\sfunction\\s",
            "foreground": "#aaaaaa"
        },
        {
            "pattern": "Leave\\sfunction\\s",
            "foreground": "#aaaaaa"
        },
        {
            "pattern": "----------------- frame \\d+ -----------------",
            "foreground": "#ffffff8",
            "background": "#000088"
        }
    ],
    "editor.largeFileOptimizations": false,
    "window.titleBarStyle": "custom",
    "workbench.editor.enablePreview": false,
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "git.alwaysShowStagedChangesResourceGroup": true,
    "editor.minimap.showSlider": "always",
    "mesonbuild.configureOnOpen": true,
    "csharp.referencesCodeLens.enabled": false,
    "workbench.editor.showTabs": false,
    "explorer.confirmDelete": false,
    "clangd.path": "/home/tksuoran/.config/Code/User/globalStorage/llvm-vs-code-extensions.vscode-clangd/install/10.0.0/clangd_10.0.0/bin/clangd"
}
