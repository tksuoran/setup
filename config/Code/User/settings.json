{
    "editor.copyWithSyntaxHighlighting": false,
    "editor.insertSpaces": true,
    "editor.formatOnPaste": false,
    "editor.tabSize": 4,
    "[typescript]": {
        "editor.tabSize": 2
    },
    "merge-conflict.diffViewPosition": "Beside",
    "[typescriptreact]": {
        "editor.tabSize": 2
    },
    "[python]": {
        "gitlens.codeLens.symbolScopes": [
            "!Module"
        ],
        "editor.rulers": [120]
    },
    "editor.renderWhitespace": "all",
    "editor.tokenColorCustomizations": {
        "strings": "#FFFF00",
        "numbers": "#FFFF00",
        "textMateRules": [{
            "scope": "keyword.operator",
            "settings": {
                "foreground": "#00FFFF",
            }
        },{
            "scope":"comment",
            "settings": {
                "foreground": "#77aaff",
            }
        }]
    },
    "editor.fontFamily": "'Source Code Pro'",
    "editor.fontWeight": 400,
    "editor.fontSize": 11,
    "editor.lineHeight": 16,
    "workbench.colorCustomizations": {
        "editorCursor.foreground": "#ffaa00",
        "editorCursor.background": "#ff8800",
        "editor.selectionBackground": "#0000cc",
        "editor.selectionForeground": "#ffffff"
    },

    //"clang-format.executable": "C:/git/clang-format.exe",
    //"C_Cpp.clang_format_path": "C:/git/clang-format.exe",
    "C_Cpp.clang_format_style": "file",

    "breadcrumbs.enabled": true,
    "editor.showFoldingControls": "always",
    "terminal.integrated.scrollback": 10000000,
    "files.insertFinalNewline": true,
    "editor.stablePeek": true,
    "editor.detectIndentation": false,
    "editor.dragAndDrop": false,
    "debug.console.fontFamily": "Source Code Pro",
    "debug.console.lineHeight": 16,

    "cmake.generator": "Ninja",
    //"cmake.buildArgs": ["-k 0"],
    //"cmake.configureArgs": [
    //    "-Wno-dev",
    //    "-DEMBREE_ISPC_SUPPORT=FALSE",
    //    "-DEMBREE_TASKING_SYSTEM=INTERNAL",
    //    "-DEMBREE_TUTORIALS=OFF",
    //    "-DEMBREE_STATIC_LIB=ON"
    //],
    "cmake.buildDirectory": "${workspaceFolder}/vscode-cmake-build",
    "cmake.configureOnEdit": false,

    "cmake.configureOnOpen": false,

    "files.associations": {
        "*.log": "log"
    },
    "logFileHighlighter.customPatterns": [
        {
            "pattern": "[_a-zA-Z]+::[_a-zA-Z]+()",
            "foreground": "#aabbff"
        },
        {
            "pattern": "[()=]",
            "foreground": "#00cccc"
        },
        {
            "pattern": "[0-9]",
            "foreground": "#cccc88"
        },
        {
            "pattern": "0x[0-9a-f]+",
            "foreground": "#cccc88"
        },
        {
            "pattern": "\\s[_a-z0-9]+.cpp\\:\\d+",
            "foreground": "#cceecc"
        },
        {
            "pattern": "\\[\\s*\\d+\\ms]\\s",
            "foreground": "#ccccee"
        },
    ],
    "editor.largeFileOptimizations": false,
    "window.titleBarStyle": "custom",
    "workbench.editor.enablePreview": false,
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "git.alwaysShowStagedChangesResourceGroup": true,
    "editor.minimap.showSlider": "always",
    "workbench.editor.showTabs": false,
    "explorer.confirmDelete": false,
    // "highlight.regexes": {
    //     "[^\\x00-\\x7F]":
    //     [
    //         { "color": "red" }
    //     ]
    // },
    "highlight.regexes": {
        "([^\\x00-\\x7F])": {
            "decorations": {
                "color": "red"
            }
        }
    },
    "editor.fontLigatures": "'ccmp' off",
    "workbench.editorAssociations": {
        "git-rebase-todo": "default"
    },
    "gitlens.advanced.fileHistoryFollowsRenames": true,

    "workbench.startupEditor": "welcomePage",
    "workbench.editor.untitled.hint": "hidden",
    "[cpp]": {
        "editor.defaultFormatter": "ms-vscode.cpptools"
    }
}
